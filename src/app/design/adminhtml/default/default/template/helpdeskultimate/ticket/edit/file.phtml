<script type="text/javascript">
//<![CDATA[    
    var lastId = 1;
    var fileOption = function() {
        return {
            del : function(obj) {
                if( confirm('<?php echo $this->__('Are you sure you want to delete it?') ?>') ) {
                    var fileRow = document.getElementById('file'+obj);
                    fileRow.remove();
                }
            },            

            add : function(obj) {
                var id = this.createId();
                var fileRow = document.getElementById('file'+obj);
                var fileTable = fileRow.parentNode.parentNode;
                var newRow = fileTable.insertRow(fileTable.rows.length);
                newRow.innerHTML=this.getTemplate(id); 
                newRow.id='file'+id;
            },

            getTemplate : function(id) {                
                return  '<td class="label"><label for="filename"><?php echo Mage::helper('helpdeskultimate')->__('File') . ("(" . Mage::getStoreConfig('helpdeskultimate/advanced/maxupload') . " Mb)") ?></label></td>'
                    +   '<td class="value">'
                    +   '<input type="file" value="" name="filename'+ id + '" id="filename'+ id + '">'  
                    +   '<button class="scalable delete" id="deletefile_button" type="button" onclick="fileOption.del('+ id + ')"><span><?php echo Mage::helper('helpdeskultimate')->__('Delete') ?></span></button>'
                    +   '</td>';
                    
            },

            createId : function () {
                return lastId++;
            }
        }
    }();
//]]>
</script>
