<config>
	<modules>
		<Noovias_Extensions>
			<version>0.1.1</version>
		</Noovias_Extensions>
	</modules>
	<admin>
		<routers>
			<noovias_extensions>
				<use>admin</use>
				<args>
					<module>Noovias_Extensions</module>
					<frontName>noovias_extensions</frontName>
				</args>
			</noovias_extensions>
		</routers>
	</admin>
	<adminhtml>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<noovias_extensions>
											<title>Noovias - Extensions</title>
										</noovias_extensions>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<extensions>
					<file>noovias/extensions.xml</file>
				</extensions>
			</updates>
		</layout>

		<translate>
			<modules>
				<Noovias_Extensions>
					<files>
						<default>Noovias_Extensions.csv</default>
					</files>
				</Noovias_Extensions>
			</modules>
		</translate>
	</adminhtml>
	<global>
		<blocks>
			<noovias_extensions>
				<class>Noovias_Extensions_Block</class>
			</noovias_extensions>
		</blocks>
        <models>
            <noovias_extensions>
                <class>Noovias_Extensions_Model</class>
            </noovias_extensions>
        </models>
		<helpers>
			<noovias_extensions>
				<class>Noovias_Extensions_Helper</class>
			</noovias_extensions>
		</helpers>
	</global>
</config>