<?xml version="1.0"?>
<config>
    <modules>
        <AW_Kbase>
            <version>1.3.0</version><platform>ce</platform>
        </AW_Kbase>
    </modules>
    <frontend>
        <routers>
            <kbase>
                <use>standard</use>
                <args>
                    <module>AW_Kbase</module>
                    <frontName>kbase</frontName>
                </args>
            </kbase>
        </routers>
        <layout>
            <updates>
                <kbase>
                    <file>kbase.xml</file>
                </kbase>
            </updates>
        </layout>
        <translate>
            <modules>
                <AW_Kbase>
                    <files>
                        <default>AW_Kbase.csv</default>
                    </files>
                </AW_Kbase>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <kbase_admin>
                <use>admin</use>
                <args>
                    <module>AW_Kbase</module>
                    <frontName>kbase_admin</frontName>
                </args>
            </kbase_admin>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <AW_Kbase>
                    <files>
                        <default>AW_Kbase.csv</default>
                    </files>
                </AW_Kbase>
            </modules>
        </translate>
        <menu>
            <kbase module="kbase">
                <title>Knowledge Base</title>
                <sort_order>71</sort_order>
                <children>
                    <new_article module="kbase">
                        <title>Add New Article</title>
                        <sort_order>10</sort_order>
                        <action>kbase_admin/adminhtml_article/new</action>
                    </new_article>
                    <article module="kbase">
                        <title>Articles</title>
                        <sort_order>20</sort_order>
                        <action>kbase_admin/adminhtml_article/index</action>
                    </article>
                    <category module="kbase">
                        <title>Categories</title>
                        <sort_order>30</sort_order>
                        <action>kbase_admin/adminhtml_category</action>
                    </category>
                    <!--<import module="kbase">
                        <title>Import</title>
                        <sort_order>40</sort_order>
                        <action>kbase/adminhtml_import</action>
                    </import>-->
                    <settings module="kbase">
                        <title>Settings</title>
                        <sort_order>50</sort_order>
                        <action>adminhtml/system_config/edit/section/kbase</action>
                    </settings>
                </children>
            </kbase>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <kbase>
                            <title>Knowledge Base Module</title>
                            <sort_order>10</sort_order>
                            <children>
                                <new_article>
                                    <title>Add New Article</title>
                                </new_article>
                                <article>
                                    <title>Articles</title>
                                </article>
                                <category>
                                    <title>Categories</title>
                                </category>
                                <!--import>
                                    <title>Import</title>
                                </import-->
                                <settings>
                                    <title>Settings</title>
                                </settings>
                            </children>
                        </kbase>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <kbase>
                                            <title>aheadWorks - Knowledge Base Section</title>
                                        </kbase>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <kbase>
                    <file>kbase.xml</file>
                </kbase>
            </updates>
        </layout>
        <global_search>
            <kbase>
                <class>kbase/search_kbase</class>
            </kbase>
        </global_search>
        <enterprise>
            <admingws>
                <collection_load_before>
                    <kbase__article_collection>addStoreFilter</kbase__article_collection>
                    <kbase__category_collection>addStoreFilter</kbase__category_collection>
                </collection_load_before>
            </admingws>
        </enterprise>
    </adminhtml>
    <global>
        <rewrite>
            <aw_kbase_globalsearch>
                <from><![CDATA[#^/kbase_admin/index/globalSearch/#]]></from>
                <to>/admin/index/globalSearch/</to>
            </aw_kbase_globalsearch>
        </rewrite>
        <models>
            <kbase>
                <class>AW_Kbase_Model</class>
                <resourceModel>kbase_mysql4</resourceModel>
            </kbase>
            <kbase_mysql4>
                <class>AW_Kbase_Model_Mysql4</class>
                <entities>
                    <article>
                        <table>aw_kbase_article</table>
                    </article>
                    <category>
                        <table>aw_kbase_category</table>
                    </category>
                    <category_article>
                        <table>aw_kbase_category_article</table>
                    </category_article>
                    <category_store>
                        <table>aw_kbase_category_store</table>
                    </category_store>
                    <tag>
                        <table>aw_kbase_tag</table>
                    </tag>
                </entities>
            </kbase_mysql4>
        </models>
        <resources>
            <kbase_setup>
                <setup>
                    <module>AW_Kbase</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </kbase_setup>
            <kbase_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </kbase_write>
            <kbase_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </kbase_read>
        </resources>
        <blocks>
            <kbase>
                <class>AW_Kbase_Block</class>
            </kbase>
        </blocks>
        <helpers>
            <kbase>
                <class>AW_Kbase_Helper</class>
            </kbase>
        </helpers>
        <events>
            <controller_front_init_routers>
                <observers>
                    <kbase>
                        <type>singleton</type>
                        <class>AW_Kbase_Controller_Router</class>
                        <method>initControllerRouters</method>
                    </kbase>
                </observers>
            </controller_front_init_routers>
            <admin_system_config_changed_section_kbase>
                <observers>
                    <kbase>
                        <type>singleton</type>
                        <class>kbase/observers</class>
                        <method>checkConfiguration</method>
                    </kbase>
                </observers>
            </admin_system_config_changed_section_kbase>
        </events>
    </global>
    <default>
        <kbase>
            <general>
                <title>Knowledge Base</title>
                <frontent_enabled>1</frontent_enabled>
                <url_key>kbase</url_key>
                <registered_customers_only>0</registered_customers_only>
                <rating_enabled>1</rating_enabled>
                <articles_per_page>10</articles_per_page>
                <listing_type>full</listing_type>
                <listing_full_text_char_limit>30</listing_full_text_char_limit>
            </general>
            <search>
                <title>Search Knowledge Base</title>
                <enabled>1</enabled>
                <order>10</order>
            </search>
            <category>
                <title>Categories</title>
                <enabled>1</enabled>
                <count>5</count>
                <order>20</order>
            </category>
            <top>
                <title>Top Articles</title>
                <enabled>1</enabled>
                <count>10</count>
                <order>30</order>
            </top>
            <latest>
                <title>Latest Articles</title>
                <enabled>1</enabled>
                <count>10</count>
                <order>40</order>
            </latest>
            <tag>
                <title>Tags</title>
                <enabled>1</enabled>
                <auto_size>1</auto_size>
                <order>50</order>
            </tag>
            <url_rewrite>
                <secure_urls>0</secure_urls>
                <cache_requests>1</cache_requests>
                <url_suffix>.html</url_suffix>
            </url_rewrite>
        </kbase>
    </default>
</config>
